<!-- =================== Header =================== -->
<%  include ./partials/header %>
<!-- =================== /Header =================== -->
<canvas id="myChart"></canvas>

<!-- =================== Footer =================== -->
<% include ./partials/footer %>
<!-- =================== /Footer =================== -->


<script type="text/javascript">
    var ctx = document.getElementById("myChart").getContext("2d");

    var timeFormat = 'MM/DD/YYYY HH:mm';

    var vetorUmidade = [];
    <% umidades.forEach(function(umidade){
    %>
      vetorUmidade.push('<%= umidade %>');
    <%
    })
    %>

    var vetorData = [];
    <% datas.forEach(function(data){
    %>
      vetorData.push('<%= data %>');
    <%
    })
    %>

    var config = {
        type: 'line',
        data: {
          labels: vetorData,

          datasets: [{
            type: 'line',
            label: 'Umidade do Solo - Ãšltimas 24 horas',
            backgroundColor: "#40bf40",
            borderColor: "#40bf40",
            fill: false,
            data: vetorUmidade,
            borderWidth: 2,
            pointRadius: 0
          }]
        },
        options: {
            title: {
                text:"Umidade do Solo"
            },
            scales: {
              xAxes: [{
                type: "time",
                display: true,
                time: {
                  format: timeFormat,
                  displayFormats: {
                    'hour': 'MMM DD, HH:mm'
                  }
                }
              }]
            }
          }
      };
  
  var myChart = new Chart(ctx, config);


</script>