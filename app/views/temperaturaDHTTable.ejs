<!-- =================== Header =================== -->
<%  include ./partials/header %>
<!-- =================== /Header =================== -->

<!-- vou incluir aqui tmb pra forçar o NProgress começar... pagina eh muito grande -->
<!-- NProgress -->
<script src="/lib/nprogress/nprogress.js"></script>
<script type="text/javascript">
  NProgress.start();
  NProgress.set(0.5);
  NProgress.configure({ easing: 'ease', speed: 400 });
</script>

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
      <div class="x_panel">
        <div class="x_title">
          <h2>Temperatura Ambiente - Sensor DHT22</h2>
          <div class="clearfix"></div>
        </div>

        <div class="x_content">
              <table id="dataTable" class="table table-striped table-bordered">
                <thead>
                  <tr>
                    <th>Data</th>
                    <th>Temperatura Ambiente °C</th>
                    <th>ID no Banco de Dados</th>
                  </tr>
                </thead>


                <tbody>
                  <% dados.forEach(function(dado){ %>
                  <tr>
                    <td><%= dado.created %></td>
                    <td><%= dado.value %></td>
                    <td><%= dado._id %></td>
                  </tr>
                  <% }); %>
                </tbody>
              </table>
        </div>
      </div>
    </div>
</div>


<!-- =================== Footer =================== -->
<% include ./partials/footer %>
<!-- =================== /Footer =================== -->

<script type="text/javascript">
  $(document).ready(function() {
      $('#dataTable').DataTable({
          "iDisplayLength": 25,
          "order": [[ 0, "desc" ]]
        });

  } );

  $(document).load(function(){
    NProgress.done();
    NProgress.remove();
  });


</script>